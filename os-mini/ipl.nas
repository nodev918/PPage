; main program

entry:
		MOV		AX,0			; initial register
		MOV		SS,AX
		MOV		SP,0x7c00
		MOV		DS,AX
		MOV		ES,AX

		MOV		SI,msg
putloop:
		MOV		AL,[SI]
		ADD		SI,1			; SI += 1
		CMP		AL,0
		JE		fin
		MOV		AH,0x0e			; display one char, google "osdev bios" 
		MOV		BX,15			; char color
		INT		0x10			; INTERRUPT to BIOS VGA, google "osdev bios"
		JMP		putloop			; loop



fin:
		HLT						; cpu halt until user interrupt
		JMP		fin				; loop

